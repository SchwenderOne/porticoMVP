{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "nixpacksPlan": {
      "phases": {
        "setup": { "nixPkgs": ["nodejs_20", "corepack"] },
        "install": { "cmds": ["corepack enable", "npm ci"] },
        "build": { "cmds": ["npm run build"] }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE"
  }
}


